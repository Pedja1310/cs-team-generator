.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.player-stat-input label {
    display: block;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
}

.kd-inputs {
    display: flex;
    align-items: center;
    gap: 10px;
}

.kd-inputs input {
    flex: 1;
    padding: 10px;
    border: 2px solid #ddd;
    border-radius: 8px;
    font-size: 16px;
}

.kd-inputs span {
    font-weight: bold;
    color: #666;
}

.submit-btn {
    background: linear-gradient(145deg, #4a7c00, #2d4d00);
