}

@media (max-width: 768px) {
    h1 {
        font-size: 1.8rem;
    }
    
    .teams-section {
        grid-template-columns: 1fr;
    }
    
    .action-buttons {
        flex-direction: column;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .winner-selection {
        flex-direction: column;
    }
    
    .leaderboard-table {
        font-size: 14px;
    }
    
    .leaderboard-table th,
    .leaderboard-table td {
        padding: 8px 4px;
    }
}
