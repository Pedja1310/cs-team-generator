}

.submit-btn:hover {
    background: linear-gradient(145deg, #5a9c00, #3d6d00);
    box-shadow: 0 6px 20px rgba(74, 124, 0, 0.6);
}

.cancel-btn {
    background: linear-gradient(145deg, #3a3a3a, #2a2a2a);
    color: white;
